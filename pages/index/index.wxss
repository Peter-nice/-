  border: none;
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
  position: absolute;
  top: 70%;
  left: 10%;
  background-repeat: no-repeat;
  padding: 0;
  background: rgba(128, 128, 128, 0);
  margin: 0;
}

