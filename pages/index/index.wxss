.content {
  width: 200rpx;
  height: 200rpx;
}

.area {
  position: absolute;
  left: 5%;
  top: 5%;
  height: 60%;
  width: 90%;
  font-size: 60rpx;
  text-indent: 28rpx;
  border: 1rpx solid rgba(128, 128, 128, 0.151);
  padding-top: 30rpx;
  background: rgba(128, 128, 128, 0.007);
  overflow: scroll;
  word-break: break-all;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

::-webkit-scrollbar {
  width: 10px;
  height: 10px;
  border-radius: 300px;
  background-color: #fff;
}

::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.034);
  border-radius: 500px;
  background-color: rgba(128, 128, 128, 0.027);
}

::-webkit-scrollbar-thumb {
  border-radius: 50px;
  -webkit-box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.164);
  background-color: rgba(128, 128, 128, 0.021);
}

